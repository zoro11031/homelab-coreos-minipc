[Unit]
Description=NFS mount for Nextcloud data storage
After=network-online.target
Wants=network-online.target
Before=docker.service

[Mount]
What=192.168.7.10:/mnt/storage/Nextcloud
Where=/mnt/nas-nextcloud
Type=nfs
Options=rw,hard,intr,rsize=131072,wsize=131072,tcp,timeo=600,retrans=2,_netdev

# Retry on failure
TimeoutSec=60

[Install]
WantedBy=multi-user.target
WantedBy=remote-fs.target
